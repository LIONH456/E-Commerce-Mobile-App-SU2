Widget buildListOffers({
  required List<String> imageCover,
}) {
  return ListView.separated(
    scrollDirection: Axis.horizontal,
    shrinkWrap: true,
    physics: const ClampingScrollPhysics(),
    padding: EdgeInsets.zero,
    itemCount: imageCover.length,
    itemBuilder: (context, index) {
      // return SvgPicture.asset(
      //   imageCover[index], // your SVG path
      //   width: 333.w,
      //   height: 148.h,
      //   fit: BoxFit.fill, // Adjust the fit as needed
      // );
      return Container(
        width: 333.w,
        height: 148.h,
        decoration: BoxDecoration(
          image: const DecorationImage(
            image: AssetImage(assets.banner2), // Set the PNG image
            fit: BoxFit.fill, // Make sure the image fits the container
          ),
          borderRadius:
              BorderRadius.circular(10.w), // Optional: add rounded corners
        ),
      );
    },
    separatorBuilder: (BuildContext context, int index) {
      return SizedBox(
        width: 10.w,
      );
    },
  );
}
